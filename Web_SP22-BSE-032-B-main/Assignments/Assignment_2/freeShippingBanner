function handleFreeShippingBanner() {
    var deviceType = GlobalE.IsMobile ? "mobile" : "desktop";
    var mainDiv = document.createElement('div');
    mainDiv.setAttribute('class', 'ge-free-shipping-container ge-free-shipping-container-' + deviceType);
    var messageDiv = document.createElement('div');
    messageDiv.setAttribute("id", "FreeShippingBanner");    
    messageDiv.setAttribute("data-gem-ignore", '');
    messageDiv.setAttribute('class', 'ge-free-shipping-msg ge-free-shipping-msg-' + deviceType);

    messageDiv.textContent = "@FREESHIPPINGBANNERTEXT";
    mainDiv.appendChild(messageDiv);
    var containerId = "@FREESHIPPINGBANNERCONTAINERID";
    if (containerId) {
        merchantContainerId = document.getElementById(containerId);

        if (merchantContainerId) {
            merchantContainerId.appendChild(mainDiv);
        }
        else {
            console.log("ShowFreeShippingBanner : Container Id : " + containerId + " not found in DOM")
        }
    }
    else {
        var body = document.body;
        var firstElement = body.firstChild;
        body.insertBefore(mainDiv, firstElement);
    }

    const style = document.createElement('style');
    style.innerHTML = "@STYLE";
    document.head.appendChild(style);

    try {
        gleTags.freeShippingBannerShowed('@ARG_MERCHANT', '@ARG_COUNTRY', '@ARG_CURRENCY');
    }
    catch (err) {
        console.log(err.message);
    }
}

handleFreeShippingBanner()