<h2 style="text-align: center;">Featured Products</h2>
<div class="fashion-section">
  <% products.forEach(product => { %>
    <form method="POST" action="/add-to-cart" class="fashion-item" style="text-align: center; border: 1px solid #eee; padding: 20px; margin: 10px;">
      <img src="/assets/<%= product.image %>" alt="<%= product.name %>" style="width: 100%; max-width: 250px;">
      <h2><%= product.name %></h2>
      <p><%= product.description %></p>
      <p><strong><%= product.price %></strong></p>

      <input type="hidden" name="name" value="<%= product.name %>">
      <input type="hidden" name="price" value="<%= product.price.replace('$','') %>">
      <button type="submit" style="background: black; color: white; padding: 8px 15px; border: none;">Add to Cart</button>
    </form>
  <% }) %>
</div>

