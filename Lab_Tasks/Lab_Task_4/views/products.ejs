<h2 style="text-align: center; margin-top: 40px;">Featured Products</h2>

<div class="fashion-section" style="display: flex; flex-wrap: wrap; justify-content: center; gap: 20px; padding: 20px;">
  <% products.forEach(product => { %>
    <form method="POST" action="/add-to-cart" class="fashion-item" 
          style="width: 250px; text-align: center; border: 1px solid #ddd; border-radius: 10px; padding: 20px; background: #fff; box-shadow: 0 2px 6px rgba(0,0,0,0.05);">
      
<% let imageSrc = product.imageUrl.startsWith('http') ? product.imageUrl : '/assets/' + product.imageUrl; %>
<img src="<%= imageSrc %>" width="200" style="object-fit: cover;" alt="<%= product.title %>">


      
      <h3 style="font-size: 18px; margin-bottom: 5px;"><%= product.name %></h3>
      <p style="font-size: 14px; color: #555; margin-bottom: 10px;"><%= product.description %></p>
      <p style="font-weight: bold; font-size: 16px; color: #000; margin-bottom: 15px;">$<%= product.price %></p>

      <input type="hidden" name="name" value="<%= product.name %>">
      <input type="hidden" name="price" value="<%= product.price %>">

      <button type="submit" 
              style="background: black; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;">
        Add to Cart
      </button>
    </form>
  <% }) %>
</div>
